@model HouseCareWeb.Models.dichvu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="info-acc">
    <h2>Xác nhận xóa thông tin dịch vụ</h2>
    <hr />
    <div class="card-info">
        <form action="/QuanLyDichVu/Delete/@Model.Id" method="post">
            <div class="info-row">
                <div class="info-col">
                    <label>Mã dịch vụ</label>
                    <input type="text" name="Madichvu" value="#@Model.Madichvu" readonly />
                </div>
                <div class="info-col">
                    <label>Tên dịch vụ</label>
                    <input type="text" name="Tendichvu" value="@Model.Tendichvu" />
                </div>
                <div class="info-col">
                    <label>Mota</label>
                    <input type="text" name="Mota" value="@Model.Mota" />
                </div>
                <div class="info-col">
                    <label>Hình ảnh</label>
                    <input type="text" name="Img" value="@Model.Img" />
                </div>
            </div>
            <div class="btn-delete">
                <button type="submit">Xóa dịch vụ</button>
            </div>
        </form>
    </div>
    
</div>

<div class="btn-admin">
    <a href="~/QuanLyDichVu/"><button>Trở về</button></a>
</div>