@model HouseCareWeb.Models.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm("Create", "BaiViet", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="info-acc">
        <h2>Thêm mới bài viết</h2>
        <hr />
        <form action="/" method="post">
            <div class="info-row">
                <div class="info-col">
                    <label>Tên</label>
                    <input type="text" name="Ten" value="" />
                </div>
                <div class="info-col">
                    <label>Mô tả</label>
                    <input type="text" name="Mota" value="" />
                </div>
                <div class="info-col">
                    <label>Ngày đăng</label>
                    <input type="date" name="Ngaydang"  />
                </div>
                <div class="info-col">
                    <label>Hình ảnh</label>
                    <input type="file" name="Img" value="" />
                </div>
            </div>
        </form>
        <div class="btn-savechange">
            <button type="submit">Thêm</button>
        </div>
    </div>
}
<div class="btn-savechange">
    <a class="btn-admin" href="~/BaiViet/">
        <button>Trở về</button>
    </a>
</div>
