@model HouseCareWeb.Models.Post

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="info-acc">
    <h2>Xác nhận xóa thông tin bài viết</h2>
    <hr />
    <div class="card-info">
        <form action="/BaiViet/Delete/@Model.Id" method="post">
            <div class="info-row">
                <div class="info-col">
                    <label>ID</label>
                    <input type="text" name="Manhanvien" value="@Model.Id" readonly />
                </div>
                <div class="info-col">
                    <label>Tên</label>
                    <input type="text" name="Hoten" value="@Model.Ten" />
                </div>

                <div class="info-col">
                    <label>Mô tả</label>
                    <input type="text" name="Mota" value="@Model.Mota" />
                </div>
                <div class="info-col">
                    <label>Hình ảnh</label><br />
                    <img src="~/img/@Model.Img" alt="Alternate Text" />
                </div>

            </div>
            <div class="btn-delete">
                <button type="submit">Xóa bài viết</button>
            </div>
        </form>
    </div>
</div>
<div class="btn-savechange">
    <a class="btn-admin" href="~/Baiviet/"><button>Trở về</button></a>
</div>

